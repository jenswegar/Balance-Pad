<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="10px">
  
  <RelativeLayout
    android:gravity="center_vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
      android:textSize="10pt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/settings_spinner_label"
      android:id="@+id/settings_spinner_label" />
    <Spinner 
      android:prompt="@string/settings_spinner_label"
      android:id="@+id/settings_spinner"
      android:layout_alignBaseline="@id/settings_spinner_label"
      android:layout_alignParentRight="true"
      android:entries="@array/currencies_array"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </RelativeLayout>
</LinearLayout>
